{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "clang": {
                    "resourceDir": "/Library/Developer/CommandLineTools/usr/lib/clang/11.0.0",
                    "extraArgs": [
                        "-isystem",
                        "/Library/Developer/CommandLineTools/usr/include/c++/v1",
                        "-I",
                        "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/usr/include/"
                    ]
                }
            }
        }
    },
    "coc.preferences.formatOnSaveFiletypes": ["javascript", "typescript", "javascriptreact", "typescriptreact"],
    "prettier.requireConfig": true
}
